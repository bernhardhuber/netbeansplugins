<?xml version="1.0"?>

<ruleset name="Custom ruleset"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0 http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="http://pmd.sf.net/ruleset_xml_schema.xsd"
>
    <!--
    -->
    
    <description>
        Describe your ruleset
    </description>
    
    <!-- a template rule reference -->
    <rule ref="rulesets/basic.xml"/>
    
    <!-- a template rule definition using xpath -->
    <rule name="rule-name"
          message="rule-message shown if rule fails"
          class="net.sourceforge.pmd.rules.XPathRule" 
    >
        <description>
            Describe the rule
        </description>
        <priority>3</priority>
        <properties>
            <property name="xpath">
                <value><![CDATA[<!-- add your xpath here -->]]>
                </value>
            </property>
        </properties>
        <example><![CDATA[<!-- add your example snippet here -->]]>
        </example>
    </rule>
    
</ruleset>